@import "../../template/topLine.wxss";
@import "../../template/loadMore.wxss";
@import "../../template/noData.wxss";

.product {
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #eaeaea;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.product-name {
  width: 460rpx;
  min-height: 60rpx;
  margin-bottom: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-name::before {
  content: "工业品";
  color: white;
  background-color: red;
  font-size: 10px;
  border-radius: 5rpx;
  padding: 0 8rpx;
  margin-right: 8rpx;
}

.product-price {
  width: 50%;
  color: red;
  font-size: 40rpx;
}

.product-price em {
  font-size: 30rpx;
}


