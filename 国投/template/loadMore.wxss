.loadmore-back {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loadmore {
  font-size: 15px;
  color: #555;
}

.loading {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.loading:after {
  content: " ";
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: 1rpx;
  border-radius: 50%;
  border: 5rpx solid #666;
  border-color: #666 transparent #666 transparent;
  animation: spin 1.2s linear infinite;
}
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

